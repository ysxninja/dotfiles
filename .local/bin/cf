#!/bin/sh

configs=`echo "alacritty aliases bashrc cf dmenu dunst fish i3 nvim remaps
starship termite tmux ultimate-push zshrc zsh_history Xmodmap
polybar polybarusermodules change-brightness change-caffeine
change-wallpaper change-volume picom network-traffic rofi" | tr ' ' '\n' | sort -u`

selected=`printf "$configs\n" | fzf`

if [[ $selected == "alacritty" ]] ; then
    $EDITOR ~/.config/alacritty/alacritty.yml
elif [[ $selected == "aliases" ]] ; then
    $EDITOR ~/.oh-my-zsh/custom/aliases.zsh
elif [[ $selected == "bashrc" ]] ; then
    $EDITOR ~/.bashrc
elif [[ $selected == "cf" ]] ; then
    $EDITOR ~/.local/bin/cf
elif [[ $selected == "fish" ]] ; then
    $EDITOR ~/.config/fish/config.fish
elif [[ $selected == "i3" ]] ; then
    $EDITOR ~/.i3/config
elif [[ $selected == "nvim" ]] ; then
    $EDITOR ~/.config/nvim/lua/user/init.lua
elif [[ $selected == "remaps" ]] ; then
    $EDITOR ~/.local/bin/remaps
elif [[ $selected == "starship" ]] ; then
    $EDITOR ~/.config/starship.toml
elif [[ $selected == "termite" ]] ; then
    $EDITOR ~/.config/termite/config
elif [[ $selected == "ultimate-push" ]] ; then
    $EDITOR ~/.local/bin/ultimate-push
elif [[ $selected == "zshrc" ]] ; then
    $EDITOR ~/.zshrc
elif [[ $selected == "zsh_history" ]] ; then
    $EDITOR ~/.zsh_history
elif [[ $selected == "tmux" ]] ; then
    $EDITOR ~/.tmux.conf
elif [[ $selected == "Xmodmap" ]] ; then
    $EDITOR ~/.Xmodmap
elif [[ $selected == "dmenu" ]] ; then
    $EDITOR ~/.dmenurc
elif [[ $selected == "dunstrc" ]] ; then
    $EDITOR ~/.config/dunst/dunstrc
elif [[ $selected == "polybar" ]] ; then
    $EDITOR ~/.config/polybar/cuts/config.ini
elif [[ $selected == "polybarusermodules" ]] ; then
    $EDITOR ~/.config/polybar/cuts/user_modules.ini
elif [[ $selected == "picom" ]] ; then
    $EDITOR ~/.config/picom.conf
elif [[ $selected == "change-volume" ]] ; then
    $EDITOR ~/.local/bin/change-volume
elif [[ $selected == "change-caffeine" ]] ; then
    $EDITOR ~/.local/bin/change-caffeine
elif [[ $selected == "change-wallpaper" ]] ; then
    $EDITOR ~/.local/bin/change-wallpaper
elif [[ $selected == "change-brightness" ]] ; then
    $EDITOR ~/.local/bin/change-brightness
elif [[ $selected == "network-traffic" ]] ; then
    $EDITOR ~/.local/bin/network-traffic.sh
elif [[ $selected == "rofi" ]]; then
    $EDITOR ~/.config/rofi/theme.rasi
fi

