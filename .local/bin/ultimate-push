#!/bin/sh
# depends on httping

printf "\n\t\e[1;36mïª¨\e[0m Testing Connection.... "
printf "\n\t\e[1;36mðŸ“¡ \e[0m"

# ping -c 1 -W 2 google.com > /dev/null 2>&1 && printf "\n\t\e[1;32mðŸ—±  \e[0m connected " || (printf "\n\t\e[1;31mðŸ—¶ \e[0m disconnected \n" && exit 4 )
httping -c 1 -t 2 google.com > /dev/null 2>&1 && printf "\n\t\e[1;32mðŸ—±  \e[0m connected " || (printf "\n\t\e[1;31mðŸ—¶ \e[0m disconnected \n" && exit 4 )

status=$?

if test $status -eq 4
then
    printf "\n\t\e[0;31mâ˜   Exiting...\e[0m\n"
    exit
else
    continue
fi

printf "\n\n\e[1;36mîœ‚\e[0m Pushing tasks to repo \e[1;36m ï†—  ..\e[0m\n"
git -C /home/yasuke/.task/ push -u origin main

printf "\n\e[1;36mîœ‚\e[0m Pushing passwords to repo \e[1;36m ï†—  ..\e[0m\n"
git -C /home/yasuke/.password-store/ push -u origin main

printf "\n\e[1;36mîœ‚\e[0m Pushing dotfiles to repo \e[1;36m ï†—  ..\e[0m\n"
/usr/bin/git --git-dir=/home/yasuke/dotfiles/ --work-tree=/home/yasuke commit -a -m "automated dotfiles update"

printf "\n Fetching origin to then push\n"
/usr/bin/git --git-dir=/home/yasuke/dotfiles/ --work-tree=/home/yasuke fetch origin
/usr/bin/git --git-dir=/home/yasuke/dotfiles/ --work-tree=/home/yasuke push origin main

printf "\n Backing up group and hist files\n"
# TODO: Rethink group.bak... do I need it
# sudo cat /etc/group > ~/group.bak && printf " group backup successful" || printf " ðŸ—¶  group backup failed"
cat ~/.zsh_history > ~/ysbackup/.zsh_history.bak && printf "\n hist backup successful \n" || printf "\n ðŸ—¶  hist backup failed \n"

printf "\n Backing up ~/.config/nvim/lua/user/init.lua\n"
rsync -av ~/.config/nvim/lua/user/init.lua ~/ysbackup/init.lua.bak && printf "\n lua user config backup successful" || printf "\n lua config backup failed"

printf " \n\n\t\e[1;33mâœ…âœ…âœ…\e[0m\n"

# printf "\n Exiting...\n"
